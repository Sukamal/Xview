<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_filter_by_merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/view_margin"
                android:background="@drawable/shape_rectangle_filter_top">

                <LinearLayout
                    android:id="@+id/ll_right_reset1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"
                        />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_reset_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextviewNormal"
                        android:text="Reset"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_merchant_lebel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormalBold"
                    android:layout_toLeftOf="@id/ll_right_reset1"
                    android:text="@string/txt_select_merchant"/>
                <TextView
                    android:id="@+id/tv_selected_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormal"
                    android:layout_toLeftOf="@id/ll_right_reset1"
                    android:layout_below="@id/tv_merchant_lebel"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent"/>

            <RelativeLayout
                android:id="@+id/rl_filter_by_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/view_margin"
                android:background="@drawable/shape_rectangle_filter">



                <LinearLayout
                    android:id="@+id/ll_right_reset2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"
                        />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_reset_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextviewNormal"
                        android:text="Reset"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_status_lebel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormalBold"
                    android:layout_toLeftOf="@id/ll_right_reset2"
                    android:text="@string/txt_select_status"/>
                <TextView
                    android:id="@+id/tv_selected_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormal"
                    android:layout_toLeftOf="@id/ll_right_reset2"
                    android:layout_below="@id/tv_status_lebel"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent"/>

            <RelativeLayout
                android:id="@+id/rl_filter_by_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/view_margin"
                android:background="@drawable/shape_rectangle_filter">

                <LinearLayout
                    android:id="@+id/ll_right_reset3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_arrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"
                        />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_reset_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextviewNormal"
                        android:text="Reset"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_type_lebel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormalBold"
                    android:layout_toLeftOf="@id/ll_right_reset3"
                    android:text="@string/txt_select_type"/>
                <TextView
                    android:id="@+id/tv_selected_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormal"
                    android:layout_toLeftOf="@id/ll_right_reset3"
                    android:layout_below="@id/tv_type_lebel"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent"/>

            <RelativeLayout
                android:id="@+id/rl_filter_by_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/view_margin"
                android:background="@drawable/shape_rectangle_filter_buttom">

                <LinearLayout
                    android:id="@+id/ll_right_reset4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_arrow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"
                        />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_reset_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextviewNormal"
                        android:text="Reset"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_date_lebel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormalBold"
                    android:layout_toLeftOf="@id/ll_right_reset4"
                    android:text="@string/txt_select_date"/>
                <TextView
                    android:id="@+id/tv_selected_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextviewNormal"
                    android:layout_toLeftOf="@id/ll_right_reset4"
                    android:layout_below="@id/tv_date_lebel"/>

            </RelativeLayout>





        </LinearLayout>
    </ScrollView>


</LinearLayout>
